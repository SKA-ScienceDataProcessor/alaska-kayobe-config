  - eno1

# Bulk data network interface.
# brenp3s0f1 results in veth pair names that are too long, so using brhte here.
alaska_bdn_interface: brhte

# Bulk data network bridge ports.
alaska_bdn_bridge_ports:
  - enp3s0f1

